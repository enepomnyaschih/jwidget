{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es2015",
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": []
}
